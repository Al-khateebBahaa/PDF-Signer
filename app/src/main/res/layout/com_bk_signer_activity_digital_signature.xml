<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/docviewer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/darker_gray"
    tools:context=".DigitalSignatureActivity">

    <FrameLayout
        android:id="@+id/frame_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.bk.signer_tool.Document.PDSViewPager
                android:id="@+id/viewpager"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/pageNumberOverlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|end|top"
            android:layout_marginTop="@dimen/pagenumber_overlay_margin_top"
            android:background="@drawable/com_bk_signer_pagenumber_indicator_theme"
            android:orientation="vertical">

            <TextView
                android:id="@+id/pageNumberTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/pagenumber_left_margin"
                android:layout_marginTop="@dimen/pagenumber_top_bottom_margin"
                android:layout_marginEnd="@dimen/pagenumber_right_margin"
                android:layout_marginBottom="@dimen/pagenumber_top_bottom_margin"
                android:background="@android:color/transparent"
                android:fontFamily="sans-serif"
                tools:text="2"
                android:textColor="@color/white"
                android:textSize="@dimen/textViewTextSize" />
        </LinearLayout>

        <ProgressBar
            android:id="@+id/savingProgress"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:visibility="invisible" />
    </FrameLayout>

</RelativeLayout>